@model Carlos.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar Novo Cliente</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Nome" class="control-label">Nome Completo</label>
                <input asp-for="Nome" class="form-control" placeholder="Digite seu nome..." />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Data_nasc" class="control-label">Data Nascimento</label>
                <input asp-for="Data_nasc" class="form-control" placeholder="Ex.: 01/01/1995" />
                <span asp-validation-for="Data_nasc" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Endereco" class="control-label">Endereço</label>
                <input asp-for="Endereco" class="form-control" placeholder="Digite seu endereço..." />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Celular" class="control-label">Celular</label>
                <input asp-for="Celular" class="form-control" placeholder="Ex.: 21912342211" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
            <div class="form-group col-6 mb-2 mt-3">
                <input type="submit" value="Confirmar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="fas fa-arrow-left">&nbsp;</i>Voltar à lista</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
